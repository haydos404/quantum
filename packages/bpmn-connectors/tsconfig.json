{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["esnext", "es2017"],
		"outDir": "./lib",
		"declaration": true,
    "importHelpers": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noImplicitReturns": true,

    "moduleResolution": "node",

    "sourceRoot": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,

    "experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true
  }
}
