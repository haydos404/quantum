{
	"name": "quantum",
	"version": "1.0.0",
	"description": "Core implementation of the quantum workflow engine",
	"main": "lib/index",
	"types": "lib/index.d.ts",
	"scripts": {
		"start": "node lib/index.js",
		"test": "nyc ts-mocha src/tests/**/**/*.test.ts",
		"coverage": "nyc report --reporter=lcov ts-mocha src/tests/**/**/*.test.ts",
		"test-debug": "mocha  -u tdd --no-timeouts --colors --require ts-node/register --inspect-brk src/tests/**/**/*.test.ts",
		"build": "tsc",
		"watch": "tsc -w"
	},
	"author": "Hayden Jackson",
	"license": "MIT",
	"dependencies": {
		"bluebird": "^3.5.1",
		"lodash": "^4.17.10",
		"pino": "^4.17.3",
		"uuid": "^3.2.1",
		"quantumlib": "*"
	},
	"devDependencies": {
		"@types/bluebird": "^3.5.18",
		"@types/chai": "^4.0.8",
		"@types/chai-as-promised": "^7.1.0",
		"@types/chai-spies": "0.0.0",
		"@types/debug": "0.0.30",
		"@types/inflection": "^1.5.28",
		"@types/lodash": "^4.14.91",
		"@types/mocha": "^2.2.44",
		"@types/node": "^8.5.2",
		"@types/sinon": "^4.1.2",
		"@types/sinon-chai": "^2.7.29",
		"@types/uuid": "^3.4.3",
		"chai": "^4.1.2",
		"chai-as-promised": "^7.1.1",
		"chai-spies": "^0.7.1",
		"mocha": "^4.0.1",
		"nyc": "^11.4.1",
		"sinon": "^4.1.3",
		"sinon-chai": "^2.14.0",
		"ts-mocha": "^1.0.3",
		"ts-node": "^6.1.1",
		"tslib": "^1.9.2",
		"typescript": "^2.9.2"
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"include": [
			"src/**/*.ts"
		],
		"exclude": [
			"**/*.d.ts",
			"coverage/**",
			"test/**",
			"test{,-*}.ts",
			"**/*.test.ts",
			"**/__tests__/**",
			"**/node_modules/**",
			"**/tests/**/*.ts"
		],
		"all": true
	}
}
